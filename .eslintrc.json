{
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "prettier"
  ],
  "parserOptions": {
    "project": ["./tsconfig.all.json"]
  },
  "rules": {
    "import/prefer-default-export": 0,
    "max-len": ["error", { "code": 140 }],
    "@typescript-eslint/semi": 0,
    "import/extensions": [
      "off",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
   ],
    "import/no-cycle": ["error"],
    "import/no-anonymous-default-export": [
      "error",
      {
        "allowArray": true,
        "allowObject": true
      }
    ],
    "semi": ["error", "never"]
  }
}

