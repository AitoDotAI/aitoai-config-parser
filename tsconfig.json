{
  "compilerOptions": {
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "module": "commonjs",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./.",
    "incremental": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
